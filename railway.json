{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn app:app --host 0.0.0.0 --port $PORT --workers 4",
    "restartPolicyType": "ON_FAILURE"
  },
  "envVariables": {
    "WORKERS": "4"
  },
  "services": [
    {
      "name": "luminacode-api",
      "port": 8000
    },
    {
      "name": "vector-db",
      "image": "qdrant/qdrant:latest",
      "port": 6333
    }
  ]
}